{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"],
      "@screens/*": ["./screens/*"],
      "@hooks/*": ["./hooks/*"],
      "@models/*": ["./models/*"],
      "@navigation/*": ["./navigation/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@tests/*": ["./tests/*"],
      "@store/*": ["./store/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
